@model IEnumerable<WebPersonagens.Models.Personagem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo Personagem</a>
</p>

<form asp-controller="Personagens" asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text"
               name="searchString"
               value="@ViewData["CurrentFilter"]"
               class="form-control"
               placeholder="Buscar por Nome, Profissão ou Universo..." />
        <button type="submit" class="btn btn-info">Filtrar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpar Filtro</a>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VidaMaxima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profissao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Universo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VidaMaxima)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profissao.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Universo.Descricao)
                </td>
                <td>
                    <a asp-action="DetalhePoder" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-2">Poder Total</a> |

                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>